<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.SobrePage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Purple" Offset="0.3" />
            <GradientStop Color="Blue" Offset="1.1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Image
                Source="hotel.png"
                HeightRequest="100"
                HorizontalOptions="Center" />

        <Label Text="Desenvolvedor:"
               FontAttributes="Bold"
               FontSize="20"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <Label Text="Izaias Correa Filho"
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <Label Text="Email: izaiascorreafilho@email.com"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <Label Text="Projeto Desenvolvido em .NET MAUI"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <Button Text="Voltar"
                Padding="10"
                Margin="20"
                HorizontalOptions="Center"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>

</ContentPage>
